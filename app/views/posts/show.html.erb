<div class="container">
    <h1>Post Details</h1>

    <div class="post-content">
        <p><%= @post.content %></p>
        <strong>by <%= @post.user.username %></strong><br>

        <div class="post-actions">
            <%= link_to "Back", posts_path %> <br>
            <% if @post.user == current_user %> 
                <%= link_to "Edit | ", edit_post_path(@post) %> 
                <%= link_to "Delete", post_path(@post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
            <% end %>
        </div>
    </div>

    <hr>

    <h3>Comments</h3>
    <% if @comments.any? %>
        <ul class="comments-list">
            <% @comments.each do |comment| %>
                <li class="comment">
                    <strong><%= comment.user.username %>:</strong>
                    <p><%= comment.content %></p>
                    <small><em><%= time_ago_in_words(comment.created_at) %> ago</em></small>
                </li>
            <% end %>
        </ul>
    <% else %>
        <p>No comments yet.</p>
    <% end %>

    <h4>Add a Comment</h4>
    <%= form_with model: [@post, Comment.new], local: true do |f| %>
        <div class="field">
            <%= f.label :content %><br>
            <%= f.text_area :content %>
        </div>
        <div class="actions">
            <%= f.submit "Add Comment" %>
        </div>
    <% end %>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        max-width: 65ch;
        margin: 0 auto;
        padding: 1rem;
    }

    h1, h3, h4 {
        text-align: center;
    }

    .post-content, .comments-list, .field, .actions {
        width: 100%;
    }

    .post-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

    ul.comments-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0;
    }
</style>
