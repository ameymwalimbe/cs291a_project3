<h1>Edit Post</h1>

<% if @post.errors.any? %>
    <div class="error-messages">
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from being updated:</h2>
        <ul>
            <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.text_area :content, rows: 2, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Update Post" %>
  </div>
<% end %>

<br>
<%= link_to "Cancel", post_path(@post) %>
