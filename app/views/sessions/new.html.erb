<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div class="field">
    <%= form.label :username, "Enter your username" %>
    <%= form.text_field :username, required: true, autofocus: true %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>
